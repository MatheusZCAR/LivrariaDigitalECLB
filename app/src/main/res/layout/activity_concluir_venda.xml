<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF9"
    android:padding="16dp">

    <!-- Capa do livro -->
    <ImageView
        android:id="@+id/imageLivro"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botoesLayout"
        app:layout_constraintVertical_bias="0"
        android:contentDescription="Capa do livro" />

    <!-- Informações do livro -->
    <TextView
        android:id="@+id/textInfoLivro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#E0F2F1"
        android:text="Título do livro, Autor\nPreço\nOutras informações"
        android:textSize="16sp"
        android:gravity="top|start"
        app:layout_constraintTop_toTopOf="@id/imageLivro"
        app:layout_constraintStart_toEndOf="@id/imageLivro"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botões -->
    <LinearLayout
        android:id="@+id/botoesLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCELAR VENDA"
            android:textAllCaps="true"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR VENDA"
            android:textAllCaps="true"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
