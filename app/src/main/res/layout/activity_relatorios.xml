<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRelatorios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF5"
    tools:context=".ui.relatorios.RelatoriosActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barraSuperior"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#0097A7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/relatorios"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/voltar"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollRelatorios"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/grupoPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="48dp">

            <RadioGroup
                android:id="@+id/radioGroupRelatorios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="40dp"
                android:layout_marginBottom="40dp">

                <RadioButton
                    android:id="@+id/radioDiario"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#E8F6F5"
                    android:buttonTint="#0097A7"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="@string/relatorio_diario"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radioSemanal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="12dp"
                    android:background="#E8F6F5"
                    android:buttonTint="#0097A7"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="@string/relatorio_semanal"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radioMensal"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="12dp"
                    android:background="#E8F6F5"
                    android:buttonTint="#0097A7"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:text="@string/relatorio_mensal"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/grupoBotao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnImprimir"
                    android:layout_width="220dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#0097A7"
                    android:text="@string/imprimir"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    app:cornerRadius="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
