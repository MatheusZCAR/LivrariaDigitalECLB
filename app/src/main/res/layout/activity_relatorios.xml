<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRelatorios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF5"
    tools:context=".RelatoriosActivity">

    <!-- Barra superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/barraSuperior"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#009999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relatórios"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintMarginStart="16dp" />

        <!-- Ícone home por cima da barra -->
        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/voltar"
            android:padding="4dp"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Grupo de botões -->
    <LinearLayout
        android:id="@+id/grupoPrincipal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Opções de relatório -->
        <RadioGroup
            android:id="@+id/radioGroupRelatorios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:layout_marginBottom="40dp">

            <RadioButton
                android:id="@+id/radioDiario"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#E8F6F5"
                android:buttonTint="#009999"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Relatório diário"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/radioSemanal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:background="#E8F6F5"
                android:buttonTint="#009999"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Relatório semanal"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/radioMensal"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="12dp"
                android:background="#E8F6F5"
                android:buttonTint="#009999"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="Relatório mensal"
                android:textColor="#000"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textStyle="bold"/>
        </RadioGroup>

        <!-- Botão imprimir -->
        <LinearLayout
            android:id="@+id/grupoBotao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnImprimir"
                android:layout_width="220dp"
                android:layout_height="70dp"
                android:backgroundTint="#008C8C"
                android:text="IMPRIMIR"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                app:cornerRadius="16dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
