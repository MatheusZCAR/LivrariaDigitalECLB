<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_realizar_venda"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF8"
    android:numColumns="3"
    android:columnWidth="0dp"
    tools:context=".RealizarVendaActivity">


    <!-- Barra superior -->
    <View
        android:id="@+id/barraSuperior"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#009999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="selecione ou pesquise os produtos:"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@id/barraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barraSuperior"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- Ícone Home -->
    <ImageButton
        android:id="@+id/btnHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_home"
        android:contentDescription="Voltar à tela inicial"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/barraSuperior"
        app:layout_constraintBottom_toBottomOf="@id/barraSuperior"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"/>

    <!-- Campo de pesquisa -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPesquisa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edtPesquisa"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Pesquisar produto..."
            android:background="@drawable/bg_edittext"
            android:paddingStart="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnPesquisar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnPesquisar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_search"
            android:background="@drawable/bg_search_button"
            android:contentDescription="Pesquisar"
            app:tint="#009999"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Grade de produtos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProdutos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPesquisa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_livro"/>

</androidx.constraintlayout.widget.ConstraintLayout>
