<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <EditText
        android:id="@+id/edtCodigoBarras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Código de Barras"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLerCodigo"
        />

    <Button
        android:id="@+id/btnLerCodigo"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Ler"
        app:layout_constraintTop_toTopOf="@id/edtCodigoBarras"
        app:layout_constraintStart_toEndOf="@id/edtCodigoBarras"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Título do Livro"
        app:layout_constraintTop_toBottomOf="@id/edtCodigoBarras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/edtAutor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Autor"
        app:layout_constraintTop_toBottomOf="@id/edtTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtPreco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Preço"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/edtAutor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnSalvarLivro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salvar Livro"
        app:layout_constraintTop_toBottomOf="@id/edtPreco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
